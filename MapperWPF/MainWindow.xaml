<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="MapperWPF.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="MapperWPF"
	Height="300"
	Width="300">
	<StackPanel>		
		<GroupBox Header="Zakres dat" Margin="5">
			<StackPanel Margin="5">
				<StackPanel Orientation="Horizontal">
					<Label Content="Od:" />
					<xctk:DateTimePicker Format="ShortDate" />
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Label Content="Do:" />
					<xctk:DateTimePicker Format="ShortDate" />
				</StackPanel>
			</StackPanel>
		</GroupBox>
		<GroupBox Header="Plik konfiguracyjny" Margin="5">
			<StackPanel Margin="5" Orientation="Horizontal">
				<TextBox/>
				<Button Content="..." />
			</StackPanel>
		</GroupBox>
	</StackPanel>
</Window>