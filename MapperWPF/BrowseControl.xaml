<UserControl x:Class="MapperWPF.BrowseControl"
             x:Name="browseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapperWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Button Content="..." DockPanel.Dock="Right" Click="Browse_Click"/>
        <TextBox x:Name="FileText" DockPanel.Dock="Left" HorizontalAlignment="Stretch" Text= "{Binding Path, ElementName=browseControl}"/>
    </DockPanel>
</UserControl>
